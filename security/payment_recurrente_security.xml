<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Record rules for Recurrente configuration -->
        <record id="payment_acquirer_recurrente_rule" model="ir.rule">
            <field name="name">Payment Acquirer Recurrente: multi-company</field>
            <field name="model_id" ref="model_payment_acquirer_recurrente"/>
            <field name="domain_force">['|', ('acquirer_id.company_id', '=', False), ('acquirer_id.company_id', 'in', company_ids)]</field>
        </record>
        
        <!-- Security for webhook endpoints -->
        <record id="ir_rule_recurrente_webhook_public" model="ir.rule">
            <field name="name">Recurrente Webhook Public Access</field>
            <field name="model_id" ref="payment.model_payment_transaction"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>
