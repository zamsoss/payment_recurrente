<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Payment Acquirer: Recurrente -->
        <record id="payment_acquirer_recurrente" model="payment.acquirer">
            <field name="name">Recurrente</field>
            <field name="provider">recurrente</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="state">disabled</field>
            <field name="is_published" eval="False"/>
            <field name="view_template_id" ref="recurrente_form"/>
            <field name="registration_view_template_id" ref="recurrente_form"/>
            <field name="payment_icon_ids" eval="[(6, 0, [ref('payment.payment_icon_cc_visa'), ref('payment.payment_icon_cc_mastercard')])]"/>
            <field name="allow_tokenization" eval="False"/>
            <field name="capture_manually" eval="False"/>
            <field name="support_refund">full_only</field>
            <field name="support_tokenization" eval="False"/>
            <field name="support_manual_capture">partial</field>
            <field name="module_id" ref="base.module_payment_recurrente"/>
            <field name="module_state">installed</field>
            <field name="image_128" type="base64" file="payment_recurrente/static/description/icon.png"/>
        </record>
        
        <!-- Default Recurrente configuration -->
        <record id="payment_acquirer_recurrente_config" model="payment.acquirer.recurrente">
            <field name="acquirer_id" ref="payment_acquirer_recurrente"/>
            <field name="enable_subscriptions" eval="True"/>
            <field name="enable_digital_dollars" eval="False"/>
        </record>
        
    </data>
</odoo>
